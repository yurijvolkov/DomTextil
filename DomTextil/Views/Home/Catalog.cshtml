@model IEnumerable<DomTextil.Domain.Entities.Product>
@using DomTextil.Domain.Entities;
@{
    ViewBag.Title = "Catalog";
}


<div class="mainContent container" >
    <div style="width:18%; height:100%; min-width:200px;  margin-left:0px;border-radius:1px; padding-left:2px;
         padding-right:2px; border-right:5px solid #158c9c; float:left; position:absolute;   ">
        <div >@Html.Action("Menu", "Home")</div>
    </div>
    <div style="width:78%; height:100%; float:right; overflow-y:scroll;  ">
        @{
            if (Model == null)
            {
                <h2>Наш Каталог</h2>
                        <img style="margin-top:8%; margin-left:30%;" src="~/Images/Logo.png" />
            }
            else
            {
                
                    var enum1 = Model.GetEnumerator();
                    enum1.MoveNext();
                    <h2>@enum1.Current.SecondaryCategory</h2>
                    if(enum1.Current.SecondaryCategory == "Изделия с логотипом")
                    {
                        <h3>*Описание изделий с логотипом*</h3>
                    }
                <table style="width:100%; height:100%; margin-left:12px;">
                    @{
                        while (enum1.Current != null)
                        {
                            <tr style="height:100%; width:100%;">
                                @for (int i = 0; i < 3; i++)
                                {
                                    <td valign="top" style="box-sizing:border-box; width:30%; height:100%; margin-right:10%;">@Html.Partial("Product", enum1.Current)</td>
                                    if (!enum1.MoveNext())
                                    { break; }
                                }

                            </tr>
                        }
                    }
                    
                </table>
                            }
                        }
        </div>
    </div>
        
