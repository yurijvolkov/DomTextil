@model IEnumerable<DomTextil.Domain.Entities.News>
@using DomTextil.Domain.Entities;
@{
    ViewBag.Title = "News";
}
<div class="mainContent container" >
    <h2><span class="glyphicon glyphicon-modal-window bigIcon"></span>Новости</h2>
@*<h3 style="color:red">Приносим наши извинения, данный ресурс находится в стадии разработки :(</h3>

    <img src="~/Images/DeploymentTime/Deployment.jpg" style="margin-left:30%; height:70%;" />*@

    @foreach (News news1 in Model)
    {
        <div style="width:100%; max-height:400px; overflow:hidden; position:relative;">
            <h3 style="margin-left:20px;">@news1.Title</h3>
            <p style="max-height:50%; width:60%; word-wrap:break-word; display:inline;">
            <img src="@news1.Photo" style="float:left; margin:7px 7px 7px 7px; width:20%; height:20%;" />

             @news1.Description
            </p>
            
            <div style="position:absolute; bottom:0px; right:0px;">
                @Html.ActionLink("Подробнее", "ConcreteNews", "Home", new { newsId = news1.ID }, null);
            </div>
        </div>

        <hr style="height:5px; color:blue; border:none; background-color:#64adeb;" />
    }
 
</div>
